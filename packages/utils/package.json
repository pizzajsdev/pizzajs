{
  "name": "@pizzajsdev/utils",
  "version": "0.4.1",
  "description": "Utility functions for PizzaJS",
  "homepage": "https://github.com/pizzajsdev/pizzajs#readme",
  "bugs": {
    "url": "https://github.com//pizzajsdev/pizzajs/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pizzajsdev/pizzajs.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./*": {
      "import": {
        "types": "./dist/*.d.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup --clean",
    "postbuild": "publint",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "nanoid": "^5.1.5",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.17",
    "publint": "^0.3.12",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
